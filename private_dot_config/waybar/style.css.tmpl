@import "theme.css";

* {
    border: none;
    border-radius: 4px;
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: "{{ .style.fav_font_name }}", "{{ .style.fav_font_name_nf }}", FontAwesome, Roboto, Helvetica, Arial, sans-serif;
    font-size: 16px;
    color: @base07;
}

window#waybar {
  /* you can also GTK3 CSS functions! */
  background-color: shade(@base00, 0.9);
  border: 2px solid alpha(@base02, 0.3);
}

button {
    /* Use box-shadow instead of border so the text isn't offset */
    box-shadow: inset 0 -3px transparent;
    /* Avoid rounded borders under each button name */
    border: none;
    border-radius: 4px;
}

/* https://github.com/Alexays/Waybar/wiki/FAQ#the-workspace-buttons-have-a-strange-hover-effect */
button:hover {
    background: inherit;
    box-shadow: inset 1px 1px @base0F;
}

#workspaces {
    background-color: @base02;
}

#workspaces button {
    padding: 0px 4px;
}

#workspaces button:hover {
    background-color: @base04;
}

#workspaces button.focused {
    background-color: @base0D;
    box-shadow: inset 0 -3px @base08;
}

#workspaces button.urgent {
    background-color: @base09;
    color: @base00;
}

#language,
#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#wireplumber,
#custom-media,
#tray,
#mode,
#idle_inhibitor,
#scratchpad,
#power-profiles-daemon,
#mpd {
    padding: 0 10px;
    background-color: @base02;
}

#battery.critical:not(.charging) {
    background-color: @base09;
    color: @base00;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: steps(12);
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: #000000;
    }
}

#temperature.critical {
    background-color: @base09;
    color: @base00;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: @base09;
}
