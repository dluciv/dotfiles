"$schema" = "https://yazi-rs.github.io/schemas/keymap.json"

[[mgr.prepend_keymap]]
on   = "!"
for  = "windows"
run  = 'shell "cmd.exe" --block'
desc = "Open CMD here"

[[mgr.prepend_keymap]]
on   = "!"
for  = "unix"
run  = 'shell "$SHELL" --block'
desc = "Open $SHELL here"

[[mgr.prepend_keymap]]
on = "<A-Esc>"
run = "quit"
desc = "Quit Yazi"

[[mgr.prepend_keymap]]
on = "<C-o>"
run = "quit"
desc = "Quit Yazi"

{{- if (and (lookPath "cb") (not .termux)) }}
[[mgr.prepend_keymap]]
on = ["<C-y>", "y"]
run = ["plugin system-clipboard"]
desc = "cb copy"

[[mgr.prepend_keymap]]
on = ["<C-y>", "p"]
run = 'shell "cb paste" --block'
desc = "cb paste"

{{- end }}

