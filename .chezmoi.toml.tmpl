{{- $server   := false -}}
{{- $headless := false -}}
{{- $mobile   := false -}}
{{- $termux   := false -}}
{{- $windows  := false -}}
{{- "" -}}

{{- if      eq .chezmoi.hostname "buratino" -}}
{{-   $server = true -}}
{{-   $headless = true -}}
{{- else if eq (env "PREFIX") "/data/data/com.termux/files/usr" -}}
{{-   $mobile = true -}}
{{-   $termux = true -}}
{{- end -}}

{{- if eq .chezmoi.os "windows" -}}
{{-   $windows = true -}}
{{- end -}}

[data]
    # Autogenerated to derive variables, do not edit. os='{{ .chezmoi.os }}', $OSTYPE='{{ env "OSTYPE" }}', $HOME='{{ env "HOME" }}'.
    server   = {{ $server }}
    headless = {{ $headless }}
    mobile   = {{ $mobile }}
    termux   = {{ $termux }}
    windows  = {{ $windows }}
